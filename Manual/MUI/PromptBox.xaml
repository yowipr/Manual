<UserControl x:Class="Manual.MUI.PromptBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manual.MUI"
             xmlns:Obj="clr-namespace:Manual.Objects"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <RichTextBox x:Name="promptBox" IsDocumentEnabled="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" PreviewKeyDown="promptBox_PreviewKeyDown"
                   
>
            <FlowDocument IsEnabled="True">
            </FlowDocument>
        </RichTextBox>
        
        
        <Button Click="Button_Click"
                Content="77/120" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="Collapsed"/>
    </Grid>
</UserControl>
