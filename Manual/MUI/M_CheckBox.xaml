<UserControl x:Class="Manual.MUI.M_CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manual.MUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <CheckBox Content="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}" d:Content="Hola"
                  IsChecked="{Binding IsChecked,RelativeSource={RelativeSource AncestorType=UserControl}}" d:IsChecked="True">
        </CheckBox>
    </Grid>
</UserControl>
